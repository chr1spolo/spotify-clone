---
import type { Playlist } from "@/lib/data.ts";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;

const { id, cover, title, artists, color } = playlist;

const artistisString = artists.join(", ");
---

<a
  href={`/playlist/${id}`}
  class="playlist-item transition-all duration-300 flex relative p-1.5 overflow-hidden gap-2 pb-4 rounded-md hover:bg-zinc-800 shadow-lg hover:shadow-xl bg-zinc-500/30 w-40 flex-col"
>
  <picture class="aspect-square flex-none">
    <img
      src={cover}
      alt={`Cover de ${title} de ${artistisString}`}
      class="transition-all duration-300 object-conver w-full h-full rounded-lg hover:opacity-40 hover:scale-105"
    />
  </picture>

  <div class="flex flex-auto flex-col px-2">
    <h4 class="text-white text-sm truncate">{title}</h4>
    <span class="text-xs text-gray-400 truncate">{artistisString}</span>
  </div>
</a>
